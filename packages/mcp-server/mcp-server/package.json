{
  "name": "@pod-protocol/mcp-server",
  "version": "2.0.0",
  "description": "Enhanced Model Context Protocol server for PoD Protocol - Enterprise-grade AI agent communication with blockchain integration",
  "homepage": "https://github.com/pod-protocol/pod-protocol",
  "bugs": {
    "url": "https://github.com/pod-protocol/pod-protocol/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pod-mcp-server": "dist/cli.js",
    "pod-mcp-enhanced": "dist/enhanced-cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "dev:hosted": "MCP_MODE=hosted tsx watch src/index.ts",
    "dev:self-hosted": "MCP_MODE=self-hosted tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:hosted": "MCP_MODE=hosted node dist/index.js",
    "start:self-hosted": "MCP_MODE=self-hosted node dist/index.js",
    "start:stdio": "MCP_MODE=self-hosted node dist/index.js",
    "start:legacy": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "setup": "npm install && npm run build",
    "prepublishOnly": "npm run clean && npm run build",
    "prepack": "npm run build",
    "validate": "npm run build && node dist/config-loader.js",
    "docker:build": "docker build -t pod-protocol/mcp-server:latest .",
    "docker:run": "docker run -p 3000:3000 -p 3001:3001 pod-protocol/mcp-server:latest",
    "health-check": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai-agents",
    "solana",
    "pod-protocol",
    "blockchain",
    "agent-communication",
    "eliza",
    "autogen",
    "crewai",
    "langchain",
    "enterprise",
    "oauth2.1",
    "real-time",
    "multi-agent",
    "a2a-protocol",
    "enhanced"
  ],
  "author": "PoD Protocol Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.2",
    "@pod-protocol/sdk": "^2.0.0",
    "@solana/web3.js": "^1.98.2",
    "@solana/rpc": "^2.1.1",
    "@solana/addresses": "^2.1.1",
    "@solana/signers": "^2.1.1",
    "@noble/ed25519": "^2.3.0",
    "bs58": "^6.0.0",
    "winston": "^3.17.0",
    "zod": "^3.25.67",
    "ws": "^8.18.2",
    "express": "5.0.1",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "@coral-xyz/anchor": "^0.31.1",
    "dotenv": "^16.6.0",
    "commander": "^14.0.0",
    "chalk": "^5.4.1",
    "ora": "^8.2.0",
    "node-fetch": "^3.3.2",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.1.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "@types/ws": "^8.18.1",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/morgan": "^1.9.10",
    "typescript": "^5.8.3",
    "tsx": "^4.20.3",
    "jest": "^30.0.3",
    "@types/jest": "^30.0.0",
    "eslint": "^9.29.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "supertest": "^7.1.1",
    "@types/supertest": "^6.0.3",
    "docker": "^1.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "examples",
    "scripts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pod-protocol/pod-protocol.git",
    "directory": "mcp-server"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./enhanced": {
      "types": "./dist/enhanced-server.d.ts",
      "import": "./dist/enhanced-server.js"
    },
    "./transport": {
      "types": "./dist/enhanced-transport.d.ts",
      "import": "./dist/enhanced-transport.js"
    },
    "./registry": {
      "types": "./dist/registry-integration.d.ts",
      "import": "./dist/registry-integration.js"
    },
    "./security": {
      "types": "./dist/security-enhancements.d.ts",
      "import": "./dist/security-enhancements.js"
    }
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "0.55.0",
    "openai": "5.8.1"
  },
  "optionalDependencies": {
    "sharp": "^0.34.2",
    "canvas": "3.1.2"
  },
  "config": {
    "mcp_version": "2025-03-26",
    "transport_version": "2.0",
    "registry_version": "1.0"
  }
}